UNFYBLS_RUNTEST = runtest

RUNTEST_INCLUDES = \
	-I$(top_srcdir)/depends/catch2/include

RUNTEST_H = \
	depends/catch2/include/catch2/catch.hpp

runtest_SOURCES = \
	$(UNFYBLS_H) \
	$(RELIC_H) \
	$(RUNTEST_H) \
	src/test.cpp \
	src/test-utils.hpp

runtest_CPPFLAGS = $(AM_CPPFLAGS) $(UNFYBLS_INCLUDES) $(RELIC_INCLUDES) $(RUNTEST_INCLUDES)
runtest_CXXFLAGS = $(AM_CXXFLAGS)
runtest_LDFLAGS  = -static $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS) $(PTHREAD_FLAGS)

runtest_LDADD = $(LIBUNFYBLS)

noinst_PROGRAMS += $(UNFYBLS_RUNTEST)
